<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:id="@+id/generatingactivity">


    <ImageView
        android:id="@+id/imagegenerating"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_248935_before_watchmen_dr__mahattan_1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginEnd="149dp"
        android:fontFamily="sans-serif-condensed"
        android:text="just hold on as we are still loading the maze"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFF7F7"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imagegenerating"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/imagegenerating"
        app:layout_constraintTop_toBottomOf="@+id/pickdrivertext"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/mazedrivertextgeneration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-black"
        android:text="Seonsor activators"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alsosensortext" />

    <Spinner
        android:id="@+id/driveroptions"
        android:layout_width="295dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:background="#FFEB3B"
        android:entries="@array/driver_algorithms"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mazedrivertext" />

    <TextView
        android:id="@+id/Mazetextrendring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-black"
        android:text="Rendering Maze: 0%"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressbargeneration"
        style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
        android:layout_width="371dp"
        android:layout_height="71dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:backgroundTint="#CDDC39"
        android:indeterminate="false"
        android:indeterminateOnly="false"
        android:max="100"
        android:min="0"
        android:progress="0"
        android:progressTint="#673AB7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mazetextrendring" />

    <TextView
        android:id="@+id/mazedrivertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-black"
        android:text="Maze Driver"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Spinner
        android:id="@+id/sensoroptions"
        android:layout_width="286dp"
        android:layout_height="55dp"
        android:layout_marginTop="128dp"
        android:background="#FFEB3B"
        android:entries="@array/sensors_activations"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driveroptions" />

    <TextView
        android:id="@+id/pickdrivertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Pick a Driver while loading"
        android:textColor="#FF5722"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressbargeneration" />

    <TextView
        android:id="@+id/alsosensortext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="sans-serif-black"
        android:text="Also Pick a Sensor Mode"
        android:textColor="#FF6161"
        android:textSize="34sp"
        android:textStyle="italic"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driveroptions"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="149dp"
        android:fontFamily="sans-serif-condensed"
        android:text="maze fully loaded, Rember to pick a driver and sensor"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFF7F7"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imagegenerating"
        app:layout_constraintStart_toStartOf="@+id/imagegenerating"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>